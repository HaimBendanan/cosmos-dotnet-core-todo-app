@model IEnumerable<todo.Models.Prescription>
<p>
    @Html.ActionLink("Download all prescriptions", "Create")
</p>
<table class="table">
    <tr>
         <th>
            Patient SSID
        </th>
        <th>
            Patient name
        </th>
        <th>
            Prescription name
        </th>
        <th>
            How to use?
        </th>
        <th>
            Is already purchased
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PatientSSID)
        </td>
       <td>
            @Html.DisplayFor(modelItem => item.PatientName)
       </td>
       <td>
            @Html.DisplayFor(modelItem => item.Name)
       </td>
        <td>
            @Html.DisplayFor(modelItem => item.HowToUse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPurchased)
        </td>
        <td>
            @Html.ActionLink("Purchase", "Details", new { id=item.Id }) | 
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>


